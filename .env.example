# Database
DATABASE_URL="postgresql://usuario:senha@localhost:5432/palworld_db"

# JWT Secret (troque por uma chave segura em produção)
JWT_SECRET="sua-chave-secreta-super-segura-aqui-mude-em-producao"

# Node Environment
NODE_ENV="development"

# CORS (separado por vírgula). Exemplo:
# CORS_ALLOWED_ORIGINS="https://portal-palworld-biuq7mlaj-jonjon15s-projects.vercel.app"
CORS_ALLOWED_ORIGINS=""

# Palworld REST API (PalGuard/PalDefender)
# Exemplo: http://201.93.248.252:8212
PALWORLD_API_URL="http://201.93.248.252:8212"
PALWORLD_API_USER="admin"
PALWORLD_API_PASS="troque-esta-senha"

# RCON Configuration (Palworld Server)
RCON_HOST="201.93.248.252"
RCON_PORT="25575"
RCON_PASSWORD="sua-senha-rcon-aqui"

# Admin access (lista de usernames separados por vírgula)
# Exemplo: ADMIN_USERNAMES="admin,jon"
ADMIN_USERNAMES=""

# Template do comando usado para dropar item via RCON (quando o front não envia rconCommand)
# Tokens disponíveis: {player} {item} {qty}
PALWORLD_DROP_ITEM_COMMAND_TEMPLATE="GiveItemToPlayer {player} {item} {qty}"

# Palleira Portal (para resgatar itens do baú via /Player/TransferItemFromStorage)
Palleira_PORTAL_BASE_URL="http://Palleiraserver.ddns.net:8080"
Palleira_PORTAL_USERNAME=""
Palleira_PORTAL_PASSWORD=""
